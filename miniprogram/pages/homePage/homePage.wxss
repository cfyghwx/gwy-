.search {
  background: white;
  display: flex;
  align-items: center;
}
/*搜索*/
.search-wrapper {
  position: absolute;
  top: 0;
  left: 40px;
  padding: 20rpx 0;
  width: 80%;
  z-index: 1;
  background-color: white;
}

.search-button {
  margin: 0 auto;
  height: 25px;
  width: 100%;
  border-radius: 5px;
  background-color: whitesmoke;
  font-size: 13px;
  line-height: 26px;
  text-align: center;
  vertical-align: top;
}

.search .avatar {
  padding: 20rpx 20rpx 0 20rpx;
}

.search .avatar image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}

.search-wrapper-blue {
  background-color: #1296db;
}

.search_btn {
    /*background: #9eccf5;*/
    
    /*height: 60rpx;*/
    width: 160rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    line-height: 80rpx;
    /*color: #708da6;*/
    border: 0.5px solid #b8b8b8;
    border-color: #4791ff transparent #4791ff #4791ff;
   }
    .search_btn input{
      width: 160rpx;
      float:right;
      margin-right:20rpx;
    }
    .search_btn .seach_img {
      width: 60rpx;
      height: 60rpx;
      margin-left: 10px;
      margin-top: 5px;
      background-color: red; }


.activities .subtitle text {
  font-size: 30rpx;
  color: #666;
  margin-left: 10px;
}

.hotList {
  width: 100%;
  display: flex;
  }
  .hotList .nav_item {
    margin-top: 30rpx;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center; 
    }
    .hotList .nav_item image {
      width: 90%;
