.section{
  margin-top: 0rpx;
  height: 75rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  background-color:#fff;
  font-size: 34rpx;
}
.section .tag{
  width: 200rpx;
  margin-left: 40rpx;
  color: #999;
}
.section .arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  left: 40px;
  transform: rotate(225deg);
}

